<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_top_round_corners"
    android:elevation="4dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_card_preview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_card_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:layout_marginTop="8dp"
        android:text="Shiny Charizard"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="@+id/iv_card_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_card_preview" />

    <TextView
        android:id="@+id/clothing_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 LINK"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_card_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_name" />

    <ImageView
        android:id="@+id/btn_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="?attr/actionBarItemBackground"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_card_preview"
        app:layout_constraintStart_toStartOf="@+id/iv_card_preview"
        app:layout_constraintTop_toBottomOf="@+id/iv_card_preview"
        app:srcCompat="@drawable/ic_purple_sort" />

</androidx.constraintlayout.widget.ConstraintLayout>