<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_top_round_corners"
    android:elevation="4dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_card_pic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_card_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:layout_marginTop="8dp"
        android:text="Card name --"
        android:textSize="16sp"
        android:textColor="@color/textColorHighEmphasis"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_card_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_card_pic" />

    <TextView
        android:id="@+id/tv_card_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mosaic Id: --"
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_card_pic"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/textColorHighEmphasis"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_name" />

</androidx.constraintlayout.widget.ConstraintLayout>